    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatModuleWithFirebase">
        <activity android:name=".activites.groupChat.GroupChatActivity">

        </activity>
        <activity android:name=".activites.groupList.GroupListActivity" />
        <activity android:name=".activites.selectUser.SelectUserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.chat.ChatActivity" />
        <activity android:name=".activites.usersList.UserListsActivity" />
        <activity android:name=".activites.inbox.InboxActivity" />
    </application>

</manifest>